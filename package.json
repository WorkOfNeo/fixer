{
  "name": "biz-stock-checker",
  "version": "1.0.0",
  "description": "Stock checker monorepo with Next.js frontend and Playwright scraper",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "npm run migrate:deploy && next build",
    "build:local": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "playwright:install": "playwright install --with-deps chromium",
    "postinstall": "node -e \"if (process.env.VERCEL !== '1' && process.env.CI !== 'true') { require('child_process').execSync('npm run playwright:install', {stdio: 'inherit'}) }\"",
    "migrate:deploy": "if [ \"$SUPABASE_ACCESS_TOKEN\" ] && [ \"$SUPABASE_DB_PASSWORD\" ] && [ \"$SUPABASE_PROJECT_REF\" ]; then npx supabase db push --linked=false --project-ref=$SUPABASE_PROJECT_REF --db-password=$SUPABASE_DB_PASSWORD; else echo 'Skipping migration - missing Supabase credentials'; fi",
    "migrate:status": "npx supabase migration list",
    "db:reset": "npx supabase db reset"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.1.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@types/node": "^20.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "cheerio": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "lucide-react": "^0.294.0",
    "next": "^14.0.0",
    "openai": "^4.104.0",
    "papaparse": "^5.5.3",
    "playwright": "^1.40.0",
    "postcss": "^8.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-toastify": "^9.1.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.3.0",
    "tailwindcss-animate": "^1.0.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "supabase": "^1.0.0",
    "ts-jest": "^29.1.0"
  }
}
