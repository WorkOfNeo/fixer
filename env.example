# SPY System Credentials (Required for stock checking and sales orders)
SPY_USER=your_spy_username
SPY_PASS=your_spy_password

# OpenAI API Key (Required for AI-powered intent classification)
OPENAI_API_KEY=your_openai_api_key

# System Configuration
SYSTEM_URL=https://2-biz.spysystem.dk

# Supabase Configuration (Required for multi-tenant setup)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Storage Configuration (Choose one)
# Use 'json' for local JSON storage (testing/development)
# Use 'supabase' for multi-tenant database (production)
CUSTOMER_STORAGE_TYPE=supabase

# Development/Testing Configuration
NODE_ENV=development

# Optional: Custom data directory for JSON storage
# CUSTOMER_DATA_DIR=data 